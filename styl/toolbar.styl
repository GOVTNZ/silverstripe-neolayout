.nl-toolbar
    margin-bottom 1em
    
    button
        margin-right 1%

.nl-modal-editor
    background #fff
    border 1px solid #ddd
    border-radius 3px
    box-shadow #000 0px 0px 16px -7px
    left 15%
    min-height 1px
    padding 2em
    position absolute
    right 15%
    top 10%
    z-index 10

    button.close
        position absolute
        right .5em
        top 1em

    .field-editor-form
        margin-top 1.5em

        label
            display block
            font-weight bold
            margin-bottom .2em

    .field-editor-rows
        margin-bottom 2em

    .field-editor-row
        margin-bottom 1em

    .field-editor-field
        margin-right 1%

.nl-modal-mask
    background #fff
    bottom 0
    left 0
    opacity .7
    position fixed
    right 0
    top 0
    z-index 1
